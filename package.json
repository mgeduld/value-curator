{
  "name": "value-curator",
  "version": "0.0.1",
  "description": "a headless react component for selecting multiple values",
  "main": "index.js",
  "scripts": {
    "test": "nyc ava-ts \"src/**/*.test.ts\"",
    "build": "parcel src/index.ts --out-dir lib/ --target node",
    "lint": "tslint -c tslint.json --project tsconfig.json",
    "prepare": "npm test && npm run lint && npm run build",
    "build:demo": "parcel src/demo-index.html --out-dir demo/ --target browser"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mgeduld/value-curator.git"
  },
  "author": "Marcus Geduld",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mgeduld/value-curator/issues"
  },
  "homepage": "https://github.com/mgeduld/value-curator#readme",
  "devDependencies": {
    "@types/react": "^16.4.16",
    "@types/react-dom": "^16.0.9",
    "ava-ts": "^0.25.2",
    "nyc": "^13.0.1",
    "parcel-bundler": "^1.10.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.2"
  }
}
